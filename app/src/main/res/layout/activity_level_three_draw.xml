<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White" >

    <LinearLayout
        android:id="@+id/layout_level3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="14" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/counter_level3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/speaker_level3"
                android:contentDescription="@string/content_description"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/counter_level3"
                android:layout_toEndOf="@id/counter_level3"
                android:src="@drawable/ic_action_volume_on"
                android:background="@color/white"
                android:onClick="speak" />

            <!--
            <ImageButton
                android:id="@+id/save_level3"
                android:contentDescription="@string/content_description"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/size_choice_three"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_save"
                android:background="@color/white"
                android:onClick="save" />
                -->
            <!--
            <Spinner
                android:id="@+id/color_choice_two"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/size_choice_two"
                android:gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:entries="@array/stroke_color" /> -->

            <Spinner
                android:id="@+id/size_choice_three"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:entries="@array/stroke_size" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginBottom="50dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/level3_text"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:textSize="60sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7">

                    <ImageView
                        android:id="@+id/imageV"
                        android:contentDescription="@string/content_description"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/trans" />
                    </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/gestureCanvasV"
                android:contentDescription="@string/content_description"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <android.gesture.GestureOverlayView
                android:id="@+id/gestures"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadeEnabled="false"
                android:fadeOffset="500000000"
                android:gestureColor="@color/black"
                android:gestureStrokeType="multiple"
                android:gestureStrokeWidth="10"
                android:uncertainGestureColor="@color/black" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/backToLevel"
            android:contentDescription="@string/content_description"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="backToLevel"
            android:src="@drawable/ic_drawer"
            android:background="@color/LimeGreen" />

        <ImageButton
            android:id="@+id/next"
            android:contentDescription="@string/content_description"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="next"
            android:src="@drawable/ic_action_forward"
            android:background="@color/SkyBlue" />

    </LinearLayout>

    <TextView
        android:id="@+id/instruction_three"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/instruction_draw"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@drawable/background"
        android:clickable="true"
        android:onClick="startGame" />

    <FrameLayout android:id="@+id/progressContainer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>